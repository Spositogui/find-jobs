<h3><%= I18n.t('candidate_profile.profiling') %></h3>

<%= render 'shared/errors', obj: @candidate_profile %>

<%= form_with(model: @candidate_profile, local: true) do |f| %>
  <p><%= f.label :name %></p>
  <p><%= f.text_field :name %></p>
  <p><%= f.label :nickname %></p>
  <p><%= f.text_field :nickname %></p>
  <p><%= f.label :date_of_birth %></p>
  <p><%= f.date_field :date_of_birth %></p>
  <p><%= f.label :candidate_formation_id %></p>
  <p>
    <%= f.collection_select(:candidate_formation_id,
                            @candidate_formations, 
                            :id, :name) %>
  </p>
  <p><%= f.label :description %></p>
  <p><%= f.text_area :description %></p>
  <p><%= f.label :experience %></p>
  <p><%= f.text_area :experience %></p>
  <p><%= f.label :avatar %></p>
  <p><%= f.file_field :avatar %></p>
  <p><%= f.submit I18n.t('candidate_profile.register_profile') %></p>
<% end %>